# Configuration pour le déploiement sur Hostinger VPS
# Copiez ce fichier en .env et modifiez les valeurs selon votre configuration

# Ports
FRONTEND_PORT=80
FRONTEND_HTTPS_PORT=443
BACKEND_PORT=8000

# URL du backend (utilisé si backend n'est pas dans le même docker-compose)
BACKEND_URL=http://backend:8000

# Configuration Backend Django
DEBUG=False
SECRET_KEY=votre-secret-key-tres-longue-et-securisee-ici
DATABASE_URL=postgresql://user:password@db:5432/shopmanagement

# Domaine (optionnel, pour SSL)
DOMAIN_NAME=votre-domaine.com

# Configuration SSL (optionnel)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem


